<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <h1>Data 608 - Module 5</h1>
        <script type="text/javascript"></script>
    </head>
    <body>
    <p>Please enter the string of words, reverse tab will print the reverse order of string</p>
    <script type="text/javascript">
    function reverse(str){
        var splitString = str.split("");
        var reverseArray = splitString.reverse();
        var joinArray = reverseArray.join("");
        return joinArray;
    };
    function reverser(){
            var x = document.getElementById("targeta");
            x.innerHTML = reverse(document.getElementById('str').value);
        }
    </script>
    <form name="mystring">
        <input id="str" type="str" size="20">
        <input type="button" value="reverse" onClick="reverser();">
    </form>
    <br>
    <div id="targeta"></div>
    </body>
    
    <body>
        <p1>Please Enter the number, result will print a table with the first 20 multiples of the number</p1>
        <script type="text/javascript">
        function multiple(number){
            list = [];
            var finalvalue = '<table border="1">';
            for (i = 1; i <= 20; i++) {list.push(number * i)};
            for (i = 0; i < 20; i++){
                if (i % 4 == 0) { 
                    finalvalue = finalvalue +'<tr>'
                };
                finalvalue = finalvalue + '<td>' + list[i] + '</td>';
                if (i % 4 == 3){
                    finalvalue = finalvalue + '</tr>'};};
            finalvalue = finalvalue + '</table>';
            return finalvalue
        };
        function display(){
            var y = document.getElementById("target");
            y.innerHTML = multiple(document.getElementById('number').value);
        }
        </script>
        <form name="myTable">
            <input id="number" type="number" size="4">
            <input type="button" value="Result" onClick="display();">
        </form>
        <br>
        <div id="target"></div>
    </body>
</html>